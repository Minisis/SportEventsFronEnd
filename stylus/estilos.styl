@import "normalize.styl"
@import "Fonts.styl"
gris-oscuro = #333333
gris-claro = #818181

body
	font-family 'Varela Round', sans-serif
	font-size 16px
figure
	margin 0
img
	vertical-align top	
a
	text-decoration none
//buttons
.button-menu
	left .5em
	margin-top -10px
	position absolute
	top 5%
	color gris-claro
.container
	font-size 0
	padding 1.4rem
	text-align center
.border-botton
	border-bottom 1px solid gris-claro 
.menu
	display none
.relative
	position-relative 0
.header
	height 3.5em	
	.title
		font-size 1.1em
		text-align center
		line-height 3.5em

.deporte
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width auto
	p
		margin .5em 0
.nombre
	color gris-claro
	text-align center
.prueba2
	color green

